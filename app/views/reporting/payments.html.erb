<% provide(:title, t('.h1')) %>
<div class="row">
	<div class="col-sm-9"><h1><%= t('.h1') %></h1></div>
	<div class="col-sm-3"><%= link_to t('.link_export'), reporting_payments_path(format: :csv), class: 'btn pop pull-right', style: 'margin-top:30px' %></div>
</div>

<% if !current_user.recent_update? %>
	<%= render partial: 'reporting/loading' %>
<% end %>

<% if @payments.any? %>
	<table class="table">
		<th><%= t('.table_title_payment_date') %></th>
		<th><%= t('.table_title_customer') %></th>
		<th><%= t('.table_title_description') %></th>
		<th><%= t('.table_title_charge_date') %></th>
		<th><%= t('.table_title_amount') %></th>
		<th><%= t('.table_title_reference') %></th>
		<th><%= t('.table_title_status') %></th>
		<th><%= t('.table_title_error_cause') %></th>
		<%= render partial: 'reporting/payment', collection: @payments %>
	</table>
	<%= will_paginate @payments %>
<% else %>
	<p><%= t('.no_payments') %></p>
<% end %>
