<% provide(:title, t('.h1') + ' - ' + @payout.reference) %>
<div class="row">
	<div class="col-sm-9"><h1><%= t('.h1') %> <small><%= @payout.reference %></small></h1></div>
	<div class="col-sm-3"><%= link_to t('.link_export'), reporting_payout_path(@payout.gc_id, format: :csv), class: 'btn pop pull-right h1-btn' %></div>
</div>
<p><%= t('reporting.payouts.fee_disclaimer') %></p>

<div class="panel panel-default">
	<div class="row">
		<div class="col-md-2 col-xs-3"><strong class="pull-right"><%= t('.payout_date') %></strong></div>
		<div class="col-md-10 col-xs-9"><span><%= @payout.gc_created_at.strftime('%d/%m/%Y') %></span></div>
	</div>
	<div class="row">
		<div class="col-md-2 col-xs-3"><strong class="pull-right"><%= t('.payout_amount') %></strong></div>
		<div class="col-md-10 col-xs-9"><span><%= number_to_currency(@payout.amount/100.0, precision: 2, unit: currency_symbol(@payout.currency)) %></span></div>
	</div>
	<div class="row">
		<div class="col-md-2 col-xs-3"><strong class="pull-right"><%= t('.payout_fees') %></strong></div>
		<div class="col-md-10 col-xs-9"><span><%= number_to_currency(@payout.sum_fees/100.0, precision: 2, unit: currency_symbol(@payout.currency)) %></span></div>
	</div>
</div>

<% if !current_user.recent_update? %>
	<%= render partial: 'reporting/loading' %>
<% end %>
<table class="table" id="results">
	<th><%= t('.table_title_type') %></th>
	<th><%= t('.table_title_action') %></th>
	<th><%= t('.table_title_charge_date') %></th>
	<th><%= t('.table_title_customer') %></th>
	<th><%= t('.table_title_credit') %></th>
	<th><%= t('.table_title_debit') %></th>
	<th><%= t('.table_title_fees') %></th>
	<%= render partial: 'reporting/payout_event', collection: @events %>
</table>
<div id="infinite-scrolling">
	<%= will_paginate @events %>
</div>