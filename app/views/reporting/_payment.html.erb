<tr>
	<td><%= payment.gc_created_at.strftime('%d/%m/%Y  %k:%M') %></td>
	<td>
		<%= payment.customer.full_name %><br/>
		<%= payment.customer.email %>
	</td>
	<td><%= payment.description %></td>
	<td><%= payment.charge_date.strftime('%d/%m/%Y') %></td>
	<td><%= payment.currency.to_s + ' ' + (payment.amount/100.0).to_s %></td>
	<td><%= payment.reference %></td>
	<td><%= t('gocardless.payment.status.' + payment.status) %></td>
	<td><%= t('gocardless.payment.cause.' + payment.failure_cause) unless payment.failure_cause.empty? %></td>
</tr>