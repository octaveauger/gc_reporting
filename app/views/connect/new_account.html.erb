<div class="col-md-8 col-md-offset-2">
	<h1><%= t('.h1') %></h1>

	<%= simple_form_for @organisation, :url => connect_create_path  do |f| %>
		<%= f.input :fname, label: t('.form_label_fname'), autofocus: true %>
		<%= f.input :lname, label: t('.form_label_lname') %>
		<%= f.input :email, label: t('.form_label_email') %>
		<%= f.input :company_name, label: t('.form_label_company_name') %>
		<div class="form-group">
			<label class="control-label col-xs-3"><%= t('.form_label_country') %></label>
			<div class="col-xs-9"><%= country_code_select(:organisation, :country, nil, {}, { class: 'form-control' }) %></div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3"><%= t('.form_label_locale') %></label>
			<div class="col-xs-9"><%= f.select :locale, [[t('locales.en'), 'en'], [t('locales.fr'), 'fr']], {}, { class: 'form-control' } %></div>
		</div>
		<div class="col-xs-offset-3"><%= f.button :submit, t('.form_button_submit'), :class => 'btn btn-primary btn-block' %></div>
	<% end %>
</div>