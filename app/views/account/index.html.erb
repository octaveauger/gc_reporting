<h1><%= t('.h1', fname: @account.fname) %></h1>

<div class="row">
	<div class="col-sm-8">
		<h2><%= t('.account_summary') %></h2>
	</div>
	<div class="col-sm-4">
		<div class="pull-right">
			<a href="<%= connect_account_path %>" class="btn pop h2-btn">
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				<%= t('.account_summary_button_edit') %>
			</a>
		</div>
	</div>
</div>

<dl class="dl-horizontal">
  <dt><%= t('.account_summary_signup_date') %></dt>
  <dd><%= @account.created_at.strftime('%d/%m/%Y') %></dd>
  <dt><%= t('.account_summary_name') %></dt>
  <dd><%= @account.full_name %></dd>
  <dt><%= t('.account_summary_company_name') %></dt>
  <dd><%= @account.company_name %></dd>
  <dt><%= t('.account_summary_email') %></dt>
  <dd><%= @account.email %></dd>
  <dt><%= t('.account_summary_country') %></dt>
  <dd><%= t(@account.country, :scope => :countries) %></dd>
  <dt><%= t('.account_summary_locale') %></dt>
  <dd><%= t('locales.' + @account.locale) %></dd>
</dl>